```python\
import pvlib\
import pandas as pd\
import numpy as np\
from typing import Dict\
import asyncio\
\
class PVStorageSimulator:\
    """Simulator f\'c3\'bcr PV + Speichersysteme"""\
    \
    def __init__(self, latitude: float, longitude: float):\
        self.location = pvlib.location.Location(\
            latitude=latitude,\
            longitude=longitude,\
            tz='Europe/Berlin'\
        )\
    \
    async def simulate_year(\
        self,\
        pv_peak_kw: float,\
        battery_kwh: float,\
        battery_power_kw: float,\
        annual_consumption_kwh: float,\
        electricity_price: float = 0.30,\
        feed_in_tariff: float = 0.08,\
        pv_tilt: float = 30.0,\
        year: int = 2024\
    ) -> Dict:\
        """Jahressimulation mit st\'c3\'bcndlicher Aufl\'c3\'b6sung"""\
        \
        # 1. Wetterdaten\
        dates = pd.date_range(f'\{year\}-01-01', f'\{year\}-12-31', freq='h', tz='Europe/Berlin')\
        \
        # Einfaches Simulationsmodell (vereinfacht ohne PVLIB f\'c3\'bcr schnelle Demo)\
        hourly_avg = 0.2  # 20% durchschnittliche Ertragskurve\
        pv_curve = np.sin(np.linspace(0, 4*np.pi, len(dates))) * 0.5 + 0.5\
        pv_ac_output = pv_curve * pv_peak_kw * hourly_avg\
        \
        # 2. Lastprofil\
        hourly_consumption = self._generate_load_profile(annual_consumption_kwh, len(pv_ac_output))\
        \
        # 3. Speicher-Logik\
        battery_soc = np.zeros(len(pv_ac_output))\
        grid_import = np.zeros(len(pv_ac_output))\
        grid_export = np.zeros(len(pv_ac_output))\
        \
        current_soc = battery_kwh * 0.5\
        \
        for i in range(len(pv_ac_output)):\
            pv = pv_ac_output[i]\
            load = hourly_consumption[i]\
            balance = pv - load\
            \
            if balance > 0:\
                # \'c3\'9cberschuss\
                charge = min(balance, battery_power_kw, battery_kwh - current_soc)\
                current_soc += charge\
                grid_export[i] = balance - charge\
            else:\
                # Defizit\
                discharge = min(-balance, battery_power_kw, current_soc)\
                current_soc -= discharge\
                grid_import[i] = -balance - discharge\
            \
            battery_soc[i] = current_soc\
        \
        # 4. KPIs\
        total_generation = pv_ac_output.sum()\
        self_consumption = total_generation - grid_export.sum()\
        autonomy = (self_consumption / annual_consumption_kwh) * 100\
        annual_savings = (\
            self_consumption * electricity_price +\
            grid_export.sum() * feed_in_tariff -\
            grid_import.sum() * electricity_price\
        )\
        \
        return \{\
            "pv_generation_kwh": float(total_generation),\
            "self_consumption_kwh": float(self_consumption),\
            "grid_import_kwh": float(grid_import.sum()),\
            "grid_export_kwh": float(grid_export.sum()),\
            "autonomy_degree_percent": float(autonomy),\
            "annual_savings_eur": float(annual_savings),\
            "battery_cycles": float(grid_export.sum() / battery_kwh),\
            "payback_period_years": 10.0 if annual_savings > 0 else 999\
        \}\
    \
    def _generate_load_profile(self, annual_kwh: float, hours: int) -> np.ndarray:\
        """Generiert Gewerbe-Lastprofil"""\
        hourly_avg = annual_kwh / hours\
        profile = np.ones(hours) * hourly_avg\
        \
        for i in range(hours):\
            day_of_week = (i // 24) % 7\
            hour_of_day = i % 24\
            \
            if day_of_week >= 5:  # Wochenende\
                profile[i] *= 0.3\
            elif hour_of_day < 6 or hour_of_day > 22:  # Nacht\
                profile[i] *= 0.2\
            elif 10 <= hour_of_day < 16:  # Mittags\
                profile[i] *= 1.2\
        \
        return profile\
